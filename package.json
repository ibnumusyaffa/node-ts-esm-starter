{
  "name": "typescript-esm-tsx-starter",
  "type": "module",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "tsx watch --clear-screen=false src/server.ts",
    "start": "node ./dist/server.js",
    "build": "rimraf ./dist && tsc && tsc-alias",
    "lint": "eslint ./src",
    "lint:fix": "eslint ./src --fix",
    "format:all": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|jsx|tsx)\"",
    "format:check": "prettier --ignore-path .gitignore --check \"**/*.+(js|ts|jsx|tsx)\"",
    "db:migrate": "kysely migrate:latest",
    "email:preview": "email preview ./src/app",
    "scheduler:run:dev": "tsx watch --clear-screen=false src/scheduler.ts",
    "scheduler:run": "node ./dist/scheduler.js",
    "user:worker:forgot-password": "tsx ./src/app/auth/jobs/forgot-password-email.worker.ts",
    "test": "NODE_ENV=test LOG_MODE=test tap run --passes --include='src/tests/**/*.test.+(js|ts|jsx|tsx)'"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@tapjs/tsx": "^1.1.25",
    "@types/amqplib": "^0.10.5",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.14.1",
    "@types/nodemailer": "^6.4.15",
    "@types/react": "^18.3.3",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-unicorn": "^53.0.0",
    "kysely-ctl": "^0.8.4",
    "prettier": "^3.3.0",
    "react": "^18.3.1",
    "rimraf": "^5.0.7",
    "supertest": "^7.0.0",
    "tap": "^19.0.2",
    "tsc-alias": "^1.8.10",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "amqplib": "^0.10.4",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "croner": "^8.0.2",
    "dayjs": "^1.11.11",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-validator": "^7.1.0",
    "ioredis": "^5.4.1",
    "jsonwebtoken": "^9.0.2",
    "jsx-email": "^1.12.1",
    "kysely": "^0.27.3",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.10.0",
    "nodemailer": "^6.9.13",
    "pino-http": "^10.1.0",
    "pino-http-print": "^3.1.0",
    "tsx": "^4.11.2",
    "znv": "^0.4.0",
    "zod": "^3.23.8"
  },
  "tap": {
    "plugin": [
      "@tapjs/tsx",
      "!@tapjs/typescript"
    ]
  }
}
